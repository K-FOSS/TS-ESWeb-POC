{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug API",
      "request": "launch",
      "type": "node",
      "protocol": "inspector",
      "port": 5822,

      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "--loader=@k-foss/ts-esnode",
        "--experimental-specifier-resolution=node",
        "--experimental-import-meta-resolve",
        "--harmony-optional-chaining",
        "--harmony-top-level-await",
        "./src/Server/index.ts"
      ]
    }
  ]
}
