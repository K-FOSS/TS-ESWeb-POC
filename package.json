{
  "name": "ts-esweb-poc",
  "version": "0.0.1",
  "description": "Proof of concept example for modern web development",
  "main": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "runner": "node --loader @k-foss/ts-esnode --experimental-specifier-resolution=node --experimental-import-meta-resolve --harmony-optional-chaining --harmony-top-level-await",
    "postinstall": "node --loader @k-foss/ts-esnode --experimental-specifier-resolution=node --experimental-import-meta-resolve --harmony-optional-chaining --harmony-top-level-await ./bin/postInstall.ts; patch-package",
    "build": "npm run runner -- ./bin/build.ts",
    "prettier": "prettier --config .prettierrc --check 'src/**/*ts' 'bin/**/*.ts'",
    "lint": "eslint --ext tsx,ts src",
    "test": "echo 'TODO'",
    "start": "node --loader @k-foss/ts-esnode --experimental-specifier-resolution=node --experimental-import-meta-resolve --harmony-optional-chaining --harmony-top-level-await ./src/Server/index.ts"
  },
  "dependencies": {
    "@wessberg/cjs-to-esm-transformer": "0.0.19",
    "cross-fetch": "^3.0.4",
    "fastify": "^2.14.1",
    "fastify-websocket": "^1.1.2",
    "gunzip-maybe": "^1.4.2",
    "patch-package": "^6.2.2",
    "react": "0.0.0-experimental-33c3af284",
    "react-dom": "0.0.0-experimental-33c3af284",
    "react-is": "0.0.0-experimental-33c3af284",
    "react-refresh": "0.0.0-experimental-33c3af284",
    "react-router": "^6.0.0-alpha.3",
    "react-router-dom": "^6.0.0-alpha.3",
    "tar-fs": "^2.1.0",
    "typescript": "^3.9.2"
  },
  "devDependencies": {
    "@k-foss/ts-esnode": "^1.4.1",
    "@types/gunzip-maybe": "^1.4.0",
    "@types/history": "^4.7.5",
    "@types/node": "^14.0.4",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/tar-fs": "^2.0.0",
    "@types/ws": "^7.2.4",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-standard": "4.0.1",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5"
  },
  "author": "",
  "license": "ISC",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "project": [
        "./tsconfig.json",
        "*/tsconfig.json"
      ]
    },
    "env": {
      "browser": true,
      "node": true
    },
    "plugins": [
      "react",
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "standard",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "args": "none",
          "varsIgnorePattern": "_.+"
        }
      ],
      "@typescript-eslint/camelcase": "warn",
      "@typescript-eslint/no-var-requires": "warn",
      "@typescript-eslint/no-object-literal-type-assertion": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/explicit-member-accessibility": "off",
      "no-unused-vars": "off",
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "semi": "off",
      "@typescript-eslint/semi": [
        "error"
      ],
      "prettier/prettier": "error"
    }
  }
}
